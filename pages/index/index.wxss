/* 顶部搜索框 */
.header{
  position: relative;
}
.header-input {
  line-height: 72rpx;
  padding: 0 36rpx;
  margin: 22rpx 36rpx 14rpx 36rpx;
  border: 1rpx solid #d9dde1;
  border-radius: 36rpx;
  /* 水平居中 */
  text-align: center; 
  font-size: 26rpx;
}

.header-input-placeholder{
  color: rgba(133, 133, 133, 0.60);
}

.header-input-icon{
  position: absolute;
  top: 4rpx;
  transform: translateX(55rpx);
  color: rgba(133, 133, 133, 0.60);
}

/* 推荐、路径、实战、活动导航栏 */
.navigator{
  display: flex;
  line-height: 112rpx;
  margin-bottom: 6rpx;
}
.navigator-item{
  position: relative;
  flex: 1;
  text-align: center;   /* 水平居中 */
  vertical-align: middle;   /* 垂直居中 */
  font-size: 32rpx;
  color: #2B333B;
}
.navigator-image{
  position: relative;
  top: 7rpx;
  width: 36rpx;
  height: 36rpx;
}
.navigator-active{
  position: absolute;
  width: 32rpx;
  height: 8rpx;
  border-radius: 4rpx;
  
  left: 90rpx;
  bottom: 20rpx;
}

.navigator-active-recommend{
  background: #F01414;
}
.navigator-active-path{
  background: purple;
}
.navigator-active-project{
  background: #DDAA00;
}
.navigator-active-activity{
  background: pink;
}
/*轮播图 */
.swiper{
  height: 232rpx;
}
.swiper-item{
  box-sizing: border-box;
}
.swiper-image{
  width: 714rpx;
  height: 232rpx;
  border-radius: 12rpx;
}

/* 实战推荐这四个字 */
.project{
  margin-top: 32rpx;
  margin-left: 40rpx;
}

.project-title{
  line-height: 32rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #2B333B;
}


/* 实战推荐下面的内容 */
.project-item{
  display: flex;
  margin-top: 16rpx;
}

.project-item-pic{
  width: 208rpx;
  height: 136rpx;
  border-radius: 12rpx;
}

.project-item-content{
  flex: 1;
  margin-left: 24rpx ;
  margin-right: 40rpx;
  border-bottom: 1rpx solid #D9DDE1;
  padding-bottom: 16rpx;
}

.project-item-content-title{
  line-height: 40rpx;
  font-size: 32rpx;
  color: #2B333B;
  font-weight: bold;
}


.project-item-content-tags{
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #71777D;
  
}

.project-item-content-tags view{
  float: left;
  margin-right: 18rpx;
}
.project-item-content-tags view:last-child{
  margin-right: 0rpx;
}

.project-item-content-tags-price-active{
  color: #F01414;
  font-weight: bold;
}

.project-item-content-tags-notice{
  background-color: rgba(242, 13, 13, 0.1);
  border-radius: 4rpx;
  font-size: 20rpx;
  color: #F20D0D;
  padding: 0 10rpx;
  margin-top: 3rpx;
}

.project-item-content-tags-user{
  line-height: 32rpx;
  font-size: 24rpx;
  color: #71777D;
}

.project-item-content-tags-user-icon{
  position: relative;
  top: 2rpx;
  left: 4rpx;
  width: 22rpx;
  height: 22rpx;
}

.activity-item{
  display: block;
  width: 702rpx;
  height: 232rpx;
  margin: 0 auto 32rpx auto;
  border-radius: 12rpx;
}